@model CustomerAPI.Models.Customer

<div class="uk-card uk-card-default uk-card-body uk-margin">
    <h1 class="uk-heading"><span>Add Customer</span></h1>
    <hr/>
    <form asp-action="Create" class="uk-form-stacked">
        <div class="form-group uk-margin">
            <label class="uk-form-label">Full Name</label>
            <div class="uk-form-controls">
                <input asp-for="FullName" class="uk-input" />
                <span asp-validation-for="FullName" class="uk-text-danger"></span>
            </div>
        </div>
        
        <div class="form-group uk-margin">
            <label asp-for="Birthdate" class="uk-form-label"></label>
            <div class="uk-form-controls">
                <input asp-for="Birthdate" class="uk-input" type="date" />
                <span asp-validation-for="Birthdate" class="uk-text-danger"></span>
            </div>
        </div>
        
        <div class="form-group uk-margin">
            <label asp-for="Gender" class="uk-form-label"></label>
            <div class="uk-form-controls">
                <select asp-for="Gender" class="uk-select">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="uk-text-danger"></span>
            </div>
        </div>
        
        <div class="form-group uk-margin">
            <label asp-for="Address" class="uk-form-label"></label>
            <div class="uk-form-controls">
                <input asp-for="Address" class="uk-input" />
                <span asp-validation-for="Address" class="uk-text-danger"></span>
            </div>
        </div>
        
        <div class="form-group uk-margin">
            <label class="uk-form-label">Contact Number</label>
            <div class="uk-form-controls">
                <input asp-for="ContactNumber" class="uk-input" />
                <span asp-validation-for="ContactNumber" class="uk-text-danger"></span>
            </div>
        </div>
        
        <div class="uk-margin">
            <button type="submit" class="uk-button uk-button-primary">Add Customer</button>
            <a asp-action="Index" class="uk-button uk-button-secondary">Cancel</a>
        </div>
    </form>
</div>
