@model CustomerAPI.Models.Customer

<div class="uk-card uk-card-default uk-card-body uk-margin">
    <h1 class="uk-heading"><span>Edit Customer</span></h1>
    <hr/>

    <form asp-action="Edit">
        <input type="hidden" asp-for="CustomerId" />

        <div class="form-group uk-margin">
            <label>Full Name</label>
            <input asp-for="FullName" class="uk-input" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group uk-margin">
            <label asp-for="Birthdate"></label>
            <input asp-for="Birthdate" class="uk-input" type="date" />
            <span asp-validation-for="Birthdate" class="text-danger"></span>
        </div>

        <div class="form-group uk-margin">
            <label asp-for="Gender"></label>
            <input asp-for="Gender" class="uk-input" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group uk-margin">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="uk-input" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group uk-margin">
            <label>Contact Number</label>
            <input asp-for="ContactNumber" class="uk-input" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>

        <button type="submit" class="uk-button uk-button-primary">Save Changes</button>
        <a asp-action="Index" class="uk-button uk-button-secondary">Cancel</a>
    </form>
</div>
